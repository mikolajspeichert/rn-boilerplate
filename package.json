{
  "name": "boilerplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test": "npm run test-unit && npm run test-e2e",
    "test-e2e": "detox build && jest __e2e__",
    "test-unit": "jest __unit__"
  },
  "dependencies": {
    "i18n-js": "^3.0.1",
    "react": "^16.0.0-alpha.12",
    "react-native": "^0.48.4",
    "react-native-dotenv": "^0.1.0",
    "react-native-i18n": "^2.0.6",
    "react-native-push-notification": "^3.0.1",
    "react-native-uuid": "^1.4.9",
    "react-navigation": "^1.0.0-beta.13",
    "react-redux": "^5.0.6",
    "realm": "^1.12.0",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-react-native": "3.0.1",
    "detox": "^5.8.1",
    "eslint": "^3.19.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-import-resolver-node": "^0.3.1",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-react-native": "^3.1.0",
    "jest": "20.0.4",
    "jest-cli": "^20.0.4",
    "prettier": "^1.7.4",
    "react-test-renderer": "^16.0.0",
    "redux-mock-store": "^1.3.0",
    "sinon": "^3.3.0"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "__tests__/__coverage__",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation)",
      "node_modules/detox/.*"
    ],
    "setupFiles": [
      "./__tests__/__config__/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/__config__/",
      "/__tests__/__coverage__"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/boilerplate.app",
        "build": "xcodebuild -project ios/boilerplate.xcodeproj -scheme boilerplate -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      }
    }
  }
}
